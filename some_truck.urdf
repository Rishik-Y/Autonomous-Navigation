<?xml version="1.0" ?>
<robot name="simple_truck">

  <!-- Base / chassis -->
  <link name="chassis">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1200.0"/>
      <inertia ixx="500" ixy="0" ixz="0"
               iyy="1500" iyz="0"
               izz="1800"/>
    </inertial>
    <visual>
      <geometry>
        <box size="4.0 1.8 1.2"/>
      </geometry>
      <origin xyz="0 0 0.6"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="4.0 1.8 1.2"/>
      </geometry>
      <origin xyz="0 0 0.6"/>
    </collision>
  </link>

  <!-- Front Left Wheel -->
  <link name="wheel_fl">
    <visual>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <origin xyz="1.5 0.9 0.3" rpy="1.5708 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <origin xyz="1.5 0.9 0.3" rpy="1.5708 0 0"/>
    </collision>
  </link>
  <joint name="joint_wheel_fl" type="fixed">
    <parent link="chassis"/>
    <child link="wheel_fl"/>
    <origin xyz="1.5 0.9 0.3" rpy="0 0 0"/>
  </joint>

  <!-- Front Right Wheel -->
  <link name="wheel_fr">
    <visual>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <origin xyz="1.5 -0.9 0.3" rpy="1.5708 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <origin xyz="1.5 -0.9 0.3" rpy="1.5708 0 0"/>
    </collision>
  </link>
  <joint name="joint_wheel_fr" type="fixed">
    <parent link="chassis"/>
    <child link="wheel_fr"/>
    <origin xyz="1.5 -0.9 0.3" rpy="0 0 0"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="wheel_rl">
    <visual>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <origin xyz="-1.5 0.9 0.3" rpy="1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <origin xyz="-1.5 0.9 0.3" rpy="1.5708 0 0"/>
    </collision>
  </link>
  <joint name="joint_wheel_rl" type="fixed">
    <parent link="chassis"/>
    <child link="wheel_rl"/>
    <origin xyz="-1.5 0.9 0.3" rpy="0 0 0"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="wheel_rr">
    <visual>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <origin xyz="-1.5 -0.9 0.3" rpy="1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.3" length="0.2"/>
      </geometry>
      <origin xyz="-1.5 -0.9 0.3" rpy="1.5708 0 0"/>
    </collision>
  </link>
  <joint name="joint_wheel_rr" type="fixed">
    <parent link="chassis"/>
    <child link="wheel_rr"/>
    <origin xyz="-1.5 -0.9 0.3" rpy="0 0 0"/>
  </joint>

</robot>
