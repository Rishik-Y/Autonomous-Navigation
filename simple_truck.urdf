<?xml version="1.0"?>
<robot name="simple_truck">
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="3500"/>
      <inertia ixx="500" ixy="0" ixz="0" iyy="2000" iyz="0" izz="2000"/>
    </inertial>
    <visual>
      <geometry>
        <box size="4 2 1.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="4 2 1.2"/>
      </geometry>
    </collision>
  </link>

  <!-- Four wheels -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.4"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.5" radius="0.4"/>
      </geometry>
    </collision>
  </link>
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.4"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.5" radius="0.4"/>
      </geometry>
    </collision>
  </link>
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.4"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.5" radius="0.4"/>
      </geometry>
    </collision>
  </link>
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.4"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.5" radius="0.4"/>
      </geometry>
    </collision>
  </link>

  <!-- Joints for wheel rotation (revolute for realism) -->
  <joint name="front_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="2 1 -0.6" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="front_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="2 -1 -0.6" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="rear_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-2 1 -0.6" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="rear_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-2 -1 -0.6" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>
</robot>
